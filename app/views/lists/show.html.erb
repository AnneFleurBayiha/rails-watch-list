<h2><%= @list.name %>📽️</h2>
<h3>Movies</h3>



<ul>
  <% @list.movies.each do |movie| %>
    <li><strong><%= movie.title %></strong></li>
    <li><img src="<%= movie.poster_url %>" alt="movie poster" width="200px"></li>
    <li><%= movie.overview %></li>
    <li><%= movie.rating %></li>
  <% end %>
</ul>


<%= link_to "Back", lists_path  %>
<%= link_to "Bookmark", new_list_bookmark_path(@list) %>
