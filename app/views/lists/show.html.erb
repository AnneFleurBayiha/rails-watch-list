<h2><%= @list.name %>📽️</h2>
<h3>Movies</h3>



<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><strong><%= bookmark.movie.title %></strong>
    <%= link_to "Remove", bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Do you really want to remove this movie from the list?"} %></li>
    <li><img src="<%= bookmark.movie.poster_url %>" alt="movie poster" width="200px"></li>
    <li><%= bookmark.movie.overview %></li>
    <li><%= bookmark.movie.rating %></li>
    <li><%= bookmark.comment %></li>
  <% end %>
</ul>


<%= link_to "Back|", lists_path  %>
<%= link_to "Add a Movie", new_list_bookmark_path(@list) %>
